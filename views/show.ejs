  <% layout("/layout/boilerplate") -%>
<style>
    body {
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }
    .card {
        border: 1px solid #ccc;
        border-radius: 10px;
        transition: transform 0.3s;
    }
    .card:hover {
        transform: scale(1.05);
    }
    .card-body {
        padding: 20px;
    }
    .btn-select {
        background-color: #007bff;
        border: none;
    }
    .btn-select:hover {
        background-color: #0056b3;
    }
    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }
    .card-text {
        font-size: 1rem;
        color: #555;
        margin-bottom: 20px;
    }
    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
    .card-img-top:hover {
        filter: brightness(80%);
        transition: filter 0.3s ease; 
    }
    .sidebar {
        background-color: #343a40;
        color: #fff;
        padding: 20px;
        border-radius: 10px;
        height: 100%;
        display: none;
    }
    .profile-details {
        margin-bottom: 20px;
    }
    .sidebar.active {
        display: block;
    }
    #sidebar-toggle {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 10px;
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 9999;
    }

    #sidebar-toggle span {
        display: block;
        width: 60px;
        height: 8px;
        background-color: #333;
        margin-bottom: 5px;
    }
    #sidebar-toggle:hover{
        transform: scale(1.05);
    }
  </style>
<body>
    <div class="container">
        <h4><button id="sidebar-toggle">â‰¡</button></h4>
        <div class="row mb-3">
            <div class="col-md-3">
               
            </div>
            <div class="col-md-8  mt-2">
                <!-- <h3>Available shippers</h3> -->
                <h4><b><%= date%> </b></h4>
                <h5><%= vahans[0].from %>-><%= vahans[0].to  %>:</h5>
                <p><%= count %> &nbsp;Shippers Available</p>
            </div>
        </div>
            <div class="row mb-3">
       
        <% for(let vahan of vahans) {%>
            <div class="row mt-3">
                <div class="card col-4 offset-3">
                    <img style="height: 35vh;" src="/image/truck.jpg" alt="" class="card-img-top show-img">
                    <div class="card-body">
                        <p class="card-text">
                <b>Time Of Pickup:</b><%=vahan.time%> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-rupee-sign"></i><%= vahan.price %><br>
                             <b>Capicity:</b><%= vahan.capicity  %> <br>
                             <b>Type Of Truck:</b><%= vahan.type  %> <br>
                        </p>
                         <form method="get " action="/book">
                    <input type="hidden" name="vahanId" value="<%= vahan._id %>">
                    <button class="btn btn-primary">Select</button> 
                </form>
                    </div>
                </div>
            </div>
            <%}%>
    </div>
                   </div>
    
    

    <script>
        document.getElementById('sidebar-toggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>
  </body>